@model SistemaDeGestão.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-5">
    <div class="row">
        <!-- Imagem do Produto -->
        <div class="col-md-6">
            <img src="@Model.ProductImage" class="img-fluid mb-4" alt="Imagem do Produto">
        </div>
        <!-- Detalhes do Produto -->
        <div class="col-md-6">
            <h2 class="mb-4">@Model.Nome</h2>
            <p class="mb-4"><strong>Descrição:</strong> @Model.Descricao</p>
            <p class="mb-4"><strong>Preço:</strong> $@Model.Preco.ToString("0.00")</p>
            <!-- Opções de Adicionais -->
            <div class="mb-4">
                <h5>Adicionais:</h5>
                <!-- Exemplo de adicional (pode ser um formulário para adicionar ao carrinho) -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="adicional1">
                    <label class="form-check-label" for="adicional1">
                        Adicional 1 (+$X.XX)
                    </label>
                </div>
                <!-- Adicione mais opções de adicionais conforme necessário -->
            </div>
            <!-- Botão Adicionar ao Carrinho -->
            <div class="text-center">
                <button type="button" class="btn btn-primary btn-lg">Adicionar ao Carrinho</button>
            </div>
        </div>
    </div>
</div>
